{
  "openapi": "3.0.0",
  "info": {
    "title": "Proxy Interno API",
    "version": "1.0.0",
    "description": "Documentação da API do Proxy Interno"
  },
  "paths": {
    "/proxy/score": {
      "get": {
        "summary": "Enfileira requisição para o upstream /api/score",
        "description": "Aceita apenas o parâmetro `cpf` e enfileira a requisição para o upstream.",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "description": "CPF do usuário (somente dígitos)",
            "required": true,
            "schema": { "type": "string", "example": "05227892180" }
          }
        ],
        "responses": {
          "202": {
            "description": "Requisição enfileirada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "jobId": { "type": "integer" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida (faltando parâmetro obrigatório)"
          },
          "503": {
            "description": "Requisição descartada (fila cheia)"
          },
          "500": {
            "description": "Erro interno ao enfileirar requisição"
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "summary": "Expor métricas Prometheus",
        "description": "Retorna métricas no formato Prometheus para monitoramento. Principais séries: proxy_queue_size, proxy_jobs_total{status}, proxy_job_latency_seconds, proxy_penalties_avoided_total, proxy_scheduler_interval_ms, proxy_rate_limit_penalties_total, proxy_timeouts_total, proxy_upstream_errors_total{code}, proxy_fallbacks_total{motivo}, proxy_circuit_state, proxy_circuit_open_total, proxy_circuit_close_total, proxy_circuit_half_open_total.",
        "responses": {
          "200": {
            "description": "Métricas Prometheus (text/plain)",
            "content": {
              "text/plain": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Healthcheck do serviço",
        "description": "Retorna o status de saúde do serviço.",
        "responses": {
          "200": {
            "description": "Serviço saudável",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" },
                    "uptime": { "type": "number", "example": 123.45 },
                    "timestamp": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

